<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="MailApp">

  <!-- Basic Details -->
  <Id>f47a98b1-75f8-4a09-8f7b-35d8dd4a8e88</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Organization Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName>Automated Support Ticket Add-in</DisplayName>
  <Description>Automatically populates email fields when specific recipient is detected.</Description>
  <IconUrl DefaultValue="https://yourdomain.com/icon.png"/>
  <SupportUrl DefaultValue="https://yourdomain.com/help"/>

  <!-- Permissions required for the Add-in -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Mailbox Extension Point -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <FormSettings>
    <Form xsi:type="ItemRead"/>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://givanna.github.io/ticket/"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Desktop version of the add-in -->
  <ExtensionPoint xsi:type="MessageComposeCommandSurface">
    <OfficeTab id="TabDefault">
      <Group id="msgComposeGroup">
        <Label resid="groupLabel"/>
        <Control xsi:type="Button" id="msgComposeButton">
          <Label resid="buttonLabel"/>
          <Supertip>
            <Title resid="buttonLabel"/>
            <Description resid="buttonDescription"/>
          </Supertip>
          <Icon>
            <bt:Image size="16" resid="icon16"/>
            <bt:Image size="32" resid="icon32"/>
            <bt:Image size="80" resid="icon80"/>
          </Icon>
          <Action xsi:type="ShowTaskpane">
            <SourceLocation resid="taskpaneUrl"/>
          </Action>
        </Control>
      </Group>
    </OfficeTab>
  </ExtensionPoint>

  <!-- Resources -->
  <Resources>
    <bt:Images>
      <bt:Image id="icon16" DefaultValue="https://yourdomain.com/icon16.png"/>
      <bt:Image id="icon32" DefaultValue="https://yourdomain.com/icon32.png"/>
      <bt:Image id="icon80" DefaultValue="https://yourdomain.com/icon80.png"/>
    </bt:Images>
    <bt:Urls>
      <bt:Url id="taskpaneUrl" DefaultValue="https://yourdomain.com/taskpane.html"/>
    </bt:Urls>
    <bt:ShortStrings>
      <bt:String id="groupLabel" DefaultValue="Support Ticket Automation"/>
      <bt:String id="buttonLabel" DefaultValue="Automate Ticket"/>
    </bt:ShortStrings>
    <bt:LongStrings>
      <bt:String id="buttonDescription" DefaultValue="Automatically fill the subject and body when emailing givannawright@gmail.com"/>
    </bt:LongStrings>
  </Resources>
</OfficeApp>
