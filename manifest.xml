<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">
  <Id>f47a98b1-75f8-4a09-8f7b-35d8dd4a8e88</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Organization Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName>Automated Support Ticket Add-in</DisplayName>
  <Description>Automatically populates email fields when specific recipient is detected.</Description>
  <IconUrl DefaultValue=""/>
  <SupportUrl DefaultValue="https://givanna.github.io/ticket/help"/>
  <Permissions>ReadWriteMailbox</Permissions>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead"/>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://givanna.github.io/ticket/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <ExtensionPoint xsi:type="MessageComposeCommandSurface">
    <OfficeTab id="TabDefault">
      <Group id="msgComposeGroup">
        <Label resid="groupLabel"/>
        <Control xsi:type="Button" id="msgComposeButton">
          <Label resid="buttonLabel"/>
          <Supertip>
            <Title resid="buttonLabel"/>
            <Description resid="buttonDescription"/>
          </Supertip>
          <Action xsi:type="ShowTaskpane">
            <SourceLocation resid="taskpaneUrl"/>
          </Action>
        </Control>
      </Group>
    </OfficeTab>
  </ExtensionPoint>
  <Resources>
    <bt:ShortStrings>
      <bt:String id="groupLabel" DefaultValue="Support Ticket Automation"/>
      <bt:String id="buttonLabel" DefaultValue="Automate Ticket"/>
    </bt:ShortStrings>
    <bt:LongStrings>
      <bt:String id="buttonDescription" DefaultValue="Automatically fill the subject and body when emailing givannawright@gmail.com"/>
    </bt:LongStrings>
    <bt:Urls>
      <bt:Url id="taskpaneUrl" DefaultValue="https://givanna.github.io/ticket/taskpane.html"/>
    </bt:Urls>
  </Resources>
</OfficeApp>
