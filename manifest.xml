<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeapp/basictypes"
           xsi:type="TaskPaneApp">

    <Id>16159d41-ddb3-447c-9597-87b0ce30816c</Id>
    <Version>1.0.0</Version>
    <ProviderName>Givanna</ProviderName>
    <DefaultLocale>en-US</DefaultLocale>

    <DisplayName DefaultValue="Support Ticket"/>
    <Description DefaultValue="This add-in helps automate the process of creating support tickets."/>
    
    <Icon>
        <bt:Image size="16" resid="icon16"/>
        <bt:Image size="32" resid="icon32"/>
        <bt:Image size="80" resid="icon80"/>
    </Icon>

    <Resources>
        <bt:Images>
            <bt:Image id="icon16" DefaultValue="https://givanna.github.io/ticket/assets/icon-16.png"/>
            <bt:Image id="icon32" DefaultValue="https://givanna.github.io/ticket/assets/icon-32.png"/>
            <bt:Image id="icon80" DefaultValue="https://givanna.github.io/ticket/assets/icon-80.png"/>
        </bt:Images>
    </Resources>

    <VersionOverrides>
        <VersionOverride xsi:type="VersionOverridesV1_0">
            <Hosts>
                <Host xsi:type="MailHost">
                    <DesktopFormFactor>
                        <FunctionFile resid="functionFile"/>
                        <ExtensionPoint xsi:type="MessageReadCommandSurface">
                            <OfficeTab id="TabDefault">
                                <Group id="msgReadGroup">
                                    <Label resid="groupLabel"/>
                                    <Control xsi:type="Button" id="msgReadOpenPaneButton">
                                        <Label resid="showTaskpaneLabel"/>
                                        <Supertip>
                                            <Title resid="showTaskpaneTitle"/>
                                            <Description resid="showTaskpaneDescription"/>
                                        </Supertip>
                                        <Icon>
                                            <bt:Image size="16" resid="icon16"/>
                                            <bt:Image size="32" resid="icon32"/>
                                            <bt:Image size="80" resid="icon80"/>
                                        </Icon>
                                        <Action xsi:type="ShowTaskpane">
                                            <TaskpaneId>TaskPaneRuntimeShow</TaskpaneId>
                                        </Action>
                                    </Control>
                                </Group>
                            </OfficeTab>
                        </ExtensionPoint>
                    </DesktopFormFactor>
                </Host>
            </Hosts>
            <Resources>
                <bt:Urls>
                    <bt:Url id="functionFile" DefaultValue="https://givanna.github.io/ticket/taskpane.html"/>
                </bt:Urls>
                <bt:Images>
                    <bt:Image id="icon16" DefaultValue="https://givanna.github.io/ticket/assets/icon-16.png"/>
                    <bt:Image id="icon32" DefaultValue="https://givanna.github.io/ticket/assets/icon-32.png"/>
                    <bt:Image id="icon80" DefaultValue="https://givanna.github.io/ticket/assets/icon-80.png"/>
                </bt:Images>
            </Resources>
        </VersionOverride>
    </VersionOverrides>

</OfficeApp>
