{
    "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
    "id": "16159d41-ddb3-447c-9597-87b0ce30816c",
    "manifestVersion": "1.17",
    "version": "1.0.0",
    "name": {
        "short": "Support Ticket",
        "full": "Support Ticket Task Pane Add-in"
    },
    "description": {
        "short": "Automates ticket creation.",
        "full": "This add-in helps automate the process of creating support tickets."
    },
    "developer": {
        "name": "Givanna",
        "websiteUrl": "https://thewrightportfolio.com/",
        "privacyUrl": "https://thewrightportfolio.com/privacypolicy",
        "termsOfUseUrl": "https://thewrightportfolio.com/termsofuse"
    },
    "icons": {
        "outline": "https://givanna.github.io/ticket/assets/outline.png",
        "color": "https://givanna.github.io/ticket/assets/color.png"
    },
    "accentColor": "#230201",
    "localizationInfo": {
        "defaultLanguageTag": "en-us",
        "additionalLanguages": []
    },
    "authorization": {
        "permissions": {
            "resourceSpecific": [
                {
                    "name": "MailboxItem.Read.User",
                    "type": "Delegated"
                }
            ]
        }
    },
    "validDomains": [
        "thewrightportfolio.com",
        "givanna.github.io"
    ],
    "extensions": [
        {
            "requirements": {
                "scopes": [
                    "mail"
                ],
                "capabilities": [
                    {
                        "name": "Mailbox",
                        "minVersion": "1.3"
                    }
                ]
            },
            "runtimes": [
                {
                    "requirements": {
                        "capabilities": [
                            {
                                "name": "Mailbox",
                                "minVersion": "1.3"
                            }
                        ]
                    },
                    "id": "TaskPaneRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://givanna.github.io/ticket/taskpane.html"
                    },
                    "lifetime": "short",
                    "actions": [
                        {
                            "id": "TaskPaneRuntimeShow",
                            "type": "openPage",
                            "pinnable": false,
                            "view": "dashboard"
                        }
                    ]
                },
                {
                    "id": "CommandsRuntime",
                    "type": "general",
                    "code": {
                        "page": "https://givanna.github.io/ticket/commands.html",
                        "script": "https://givanna.github.io/ticket/commands.js"
                    },
                    "lifetime": "short",
                    "actions": [
                        {
                            "id": "action",
                            "type": "executeFunction",
                            "displayName": "action"
                        }
                    ]
                }
            ],
            "ribbons": [
                {
                    "contexts": [
                        "mailRead"
                    ],
                    "tabs": [
                        {
                            "builtInTabId": "TabDefault",
                            "groups": [
                                {
                                    "id": "msgReadGroup",
                                    "label": "Contoso Add-in",
                                    "icons": [
                                        {
                                            "size": 16,
                                            "url": "https://givanna.github.io/ticket/assets/icon-16.png"
                                        },
                                        {
                                            "size": 32,
                                            "url": "https://givanna.github.io/ticket/assets/icon-32.png"
                                        },
                                        {
                                            "size": 80,
                                            "url": "https://givanna.github.io/ticket/assets/icon-80.png"
                                        }
                                    ],
                                    "controls": [
                                        {
                                            "id": "msgReadOpenPaneButton",
                                            "type": "button",
                                            "label": "Show Taskpane",
                                            "icons": [
                                                {
                                                    "size": 16,
                                                    "url": "https://givanna.github.io/ticket/assets/icon-16.png"
                                                },
                                                {
                                                    "size": 32,
                                                    "url": "https://givanna.github.io/ticket/assets/icon-32.png"
                                                },
                                                {
                                                    "size": 80,
                                                    "url": "https://givanna.github.io/ticket/assets/icon-80.png"
                                                }
                                            ],
                                            "supertip": {
                                                "title": "Show Taskpane",
                                                "description": "Opens a pane displaying all available properties."
                                            },
                                            "actionId": "TaskPaneRuntimeShow"
                                        },
                                        {
                                            "id": "ActionButton",
                                            "type": "button",
                                            "label": "Perform an action",
                                            "icons": [
                                                {
                                                    "size": 16,
                                                    "url": "https://givanna.github.io/ticket/assets/icon-16.png"
                                                },
                                                {
                                                    "size": 32,
                                                    "url": "https://givanna.github.io/ticket/assets/icon-32.png"
                                                },
                                                {
                                                    "size": 80,
                                                    "url": "https://givanna.github.io/ticket/assets/icon-80.png"
                                                }
                                            ],
                                            "supertip": {
                                                "title": "Perform an action",
                                                "description": "Perform an action when clicked."
                                            },
                                            "actionId": "action"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
